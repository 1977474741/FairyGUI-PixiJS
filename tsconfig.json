{
  "compilerOptions": {
    "target": "es5",
    "stripInternal": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "watch": true,
    "sourceRoot": "./src",
    "typeRoots": [
      "./typings"
    ]
  },
  "exclude": [
    "node_modules",
    "dist/",
    "bin/"
  ]
}
