{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "problemMatcher" : "$tsc",
    "tasks": [
        {
            "taskName": "buildProject",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "tsc",
            "args": [
                "--sourceMap",
                "--declaration",
                "--outFile",
                "./dist/fairygui.js",
                "--project",
                "."
            ]
        }
    ]
}
